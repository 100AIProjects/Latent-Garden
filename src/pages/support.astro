---
/* src/pages/support.astro */
import BaseLayout from '../layouts/BaseLayout.astro';
import Wayfinder from '../components/Wayfinder.astro';
---

<BaseLayout>
    <main class="container">
        <div style="display: flex; justify-content: center;">
            <Wayfinder title="WATERING_LOGIC" parent="ROOT" />
        </div>

        <h1 class="hero-title">Water the Garden</h1>
        
        <div class="content-block">
            <p class="intro">
                This garden's ecosystem requires time, energy, and server costs to maintain the balance.
            </p>

            <div class="donation-tiers">
                
                <div class="tier">
                    <h3>SPRINKLE</h3>
                    <p class="price">$5 / mo</p>
                    <p class="desc">Keeps the servers humid and the logic running.</p>
                    <a href="https://buy.stripe.com/3cIcN51uAegV3Cs6w06c001" target="_blank" class="cta-button">Contribute Mist</a>
                </div>

                <div class="tier">
                    <h3>STREAM</h3>
                    <p class="price">$20 / mo</p>
                    <p class="desc">Accelerates the germination of new nodes.</p>
                    <a href="https://buy.stripe.com/4gM5kD5KQ2ydgpe3jO6c000" target="_blank" class="cta-button">Use the Hose</a>
                </div>

                <div class="tier">
                    <h3>FLOOD</h3>
                    <p class="price">$n+1 / mo</p> 
                    <p class="desc">Total saturation of the system. Choose your volume.</p>
                    <a href="https://buy.stripe.com/3cIcN5flq8WBb4U5rW6c002" target="_blank" class="cta-button">Break the Dam</a>
                </div>

            </div>

        </div>

        <footer class="footer-soil">
            <div class="soil-divider"></div>
            <div class="legals">
                <span>Â© 2026 100 AI PROJECTS</span>
                <a href="/tc">T&C</a>
                <a href="/privacy">Privacy</a>
            </div>
        </footer>
    </main>
</BaseLayout>

<style>
    .container { max-width: 900px; margin: 150px auto; padding: 0 20px; text-align: center; }
    
    .hero-title { 
        font-family: var(--font-head); font-weight: 700; font-size: 3.5rem; 
        margin-bottom: 2rem; color: var(--ink);
    }
    
    .intro {
        font-family: var(--font-head); font-size: 1.2rem; line-height: 1.6;
        color: var(--ink-dim); margin-bottom: 4rem; max-width: 600px; margin-left: auto; margin-right: auto;
    }

    /* 3-COLUMN GRID */
    .donation-tiers {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 Equal Columns */
        gap: 2rem;
        margin-bottom: 4rem;
    }

    /* MOBILE: Stack them */
    @media (max-width: 768px) {
        .donation-tiers { grid-template-columns: 1fr; }
    }

    .tier {
        border: 1px solid var(--border);
        padding: 2rem;
        transition: all 0.5s cubic-bezier(0.22, 1, 0.36, 1);
        display: flex; flex-direction: column; justify-content: space-between;
    }
    
    /* THE BLOOM EFFECT (Lift + Glow) */
    .tier:hover { 
        border-color: var(--moss); 
        transform: translateY(-10px); 
        box-shadow: 0 20px 40px -10px rgba(0,0,0,0.3); /* Soft shadow */
    }

    .tier h3 { 
        font-family: var(--font-mono); font-size: 12px; 
        text-transform: uppercase; letter-spacing: 2px; margin-bottom: 1rem; 
        color: var(--moss);
    }
    
    .price { font-family: var(--font-head); font-size: 2rem; margin-bottom: 0.5rem; font-weight: 700; }
    .desc { font-size: 0.9rem; opacity: 0.7; margin-bottom: 2rem; line-height: 1.4; flex-grow: 1; }

    .cta-button {
        display: block; width: 100%;
        box-sizing: border-box;
        padding: 15px 0;
        background: var(--ink); color: var(--bg);
        text-decoration: none;
        font-family: var(--font-mono); font-size: 10px;
        text-transform: uppercase; letter-spacing: 1px;
        transition: opacity 0.3s;
    }
    .cta-button:hover { opacity: 0.8; }

    .crypto-note {
        font-family: var(--font-mono); font-size: 10px; opacity: 0.5;
        border-top: 1px dashed var(--border); padding-top: 2rem;
        display: inline-block;
    }
    code { background: var(--border); padding: 2px 5px; }
</style>