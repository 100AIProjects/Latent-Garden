---
/* src/components/SeedModal.astro */
---

<dialog id="seed-modal" class="modal-backdrop">
    <div class="modal-glass">
        <header class="modal-header">
            <span class="status-tag seedling">ðŸŒ± SEEDLING</span>
            <span id="plot-id" class="plot-id">LATENT PLOT #000</span>
            <button id="close-modal" class="close-btn">Ã—</button>
        </header>

        <div class="modal-body">
            <h3 class="poetic-text">
                The soil here is cold.<br>
                Nothing has taken root.
            </h3>
            <p class="instruction-text">
                This plot is unplanted. You may water it into existence â€” or sow something of your own.
            </p>
        </div>

        <div class="modal-actions">
            <a href="https://buy.stripe.com/5kQ6oH2yE6Ot4Gw07C6c003" target="_blank" class="action-btn water-btn">
                <span class="icon">ðŸ’§</span>
                <span>Water this Seed ($1)</span>
            </a>

            <form id="sow-form" class="sow-form">
                <input type="text" placeholder="Suggest a topic..." class="sow-input" required />
                <button type="submit" class="action-btn sow-btn">SOW</button>
            </form>
        </div>
    </div>
</dialog>

<script>
    const dialog = document.getElementById('seed-modal');
    const plotIdSpan = document.getElementById('plot-id');
    const closeBtn = document.getElementById('close-modal');
    const form = document.getElementById('sow-form');

    // LISTENER: Open on Garden Click
    // This listens for a custom event dispatched by ForceGarden.astro
    document.addEventListener('garden:seed-click', (e) => {
        // e.detail contains the node ID
        const id = e.detail.id.toString().padStart(4, '0');
        plotIdSpan.textContent = `LATENT PLOT #${id}`;
        dialog.showModal();
    });

    // LISTENER: Close
    closeBtn.addEventListener('click', () => dialog.close());
    
    // Close when clicking backdrop
    dialog.addEventListener('click', (e) => {
        if (e.target === dialog) dialog.close();
    });

    // LISTENER: Sow Form (Mock Submission)
    form.addEventListener('submit', (e) => {
        e.preventDefault();
        const btn = form.querySelector('.sow-btn');
        const input = form.querySelector('.sow-input');
        
        // Visual Feedback
        const originalText = btn.textContent;
        btn.textContent = "SEEDED";
        btn.classList.add('success');
        input.value = "";
        
        setTimeout(() => {
            dialog.close();
            setTimeout(() => {
                btn.textContent = originalText;
                btn.classList.remove('success');
            }, 500);
        }, 1000);
    });
</script>

<style>
    /* BACKDROP */
    .modal-backdrop {
    /* --- ADD THIS TO FIX THE GAP --- */
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000; /* Ensure it sits on top of everything */
    /* ------------------------------ */

    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(4px);
    border: none;
    width: 100vw;
    height: 100vh;
    padding: 0;
    margin: 0;
    display: grid;
    place-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

    .modal-backdrop[open] {
        opacity: 1;
        pointer-events: all;
    }

    /* GLASS CARD */
    .modal-glass {
        background: var(--bg);
        border: 1px solid var(--border);
        padding: 30px;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        transform: translateY(20px);
        transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .modal-backdrop[open] .modal-glass {
        transform: translateY(0);
    }

    /* TYPOGRAPHY & LAYOUT */
    .modal-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        font-family: var(--font-mono);
        font-size: 10px;
        letter-spacing: 1px;
    }

    .plot-id {
        color: var(--moss);
        margin-left: 10px;
    }

    .close-btn {
        margin-left: auto;
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        color: var(--ink-dim);
    }

    .poetic-text {
        font-family: var(--font-head);
        font-style: italic;
        font-size: 20px;
        margin-bottom: 15px;
        color: var(--ink);
    }

    .instruction-text {
        font-size: 14px;
        color: var(--ink-dim);
        margin-bottom: 30px;
        line-height: 1.5;
    }

    /* ACTIONS */
    .modal-actions {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .action-btn {
        box-sizing: border-box;
        width: 100%;
        padding: 12px;
        font-family: var(--font-mono);
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        border: 1px solid var(--border);
        background: transparent;
        color: var(--ink);
        transition: all 0.2s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        text-decoration: none; /* For the link */
    }

    .water-btn:hover {
        background: rgba(45, 90, 39, 0.05);
        border-color: var(--moss);
        color: var(--moss);
    }

    .sow-form {
        display: flex;
        gap: 10px;
    }

    .sow-input {
        flex: 1;
        background: transparent;
        border: 1px solid var(--border);
        padding: 0 12px;
        font-family: var(--font-mono);
        font-size: 12px;
        color: var(--ink);
    }

    .sow-btn {
        width: auto;
        background: var(--ink);
        color: var(--bg);
    }

    .sow-btn.success {
        background: var(--moss);
        border-color: var(--moss);
    }
</style>